<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:id="@+id/rlParent" android:background="@color/adex_gray">

    <RelativeLayout android:layout_width="fill_parent"
                    android:layout_height="140px"
                    android:background="@color/adex_navvarcolor"
                    android:id="@+id/rlNavbar">

        <ImageView
                android:layout_width="86px"
                android:layout_height="68px"
                android:id="@+id/imageMenuTab"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="48px"
                android:layout_centerVertical="true"
                android:scaleType="fitCenter"
                android:src="@drawable/icon_menutab"/>

        <TextView android:layout_width="400px"
                  android:layout_height="fill_parent"
                  android:text="LuckyDraw Result"
                  android:layout_centerInParent="true"
                  android:textColor="@color/adex_white"
                  android:textSize="48px"
                  android:textStyle="bold"
                  android:gravity="center"/>

    </RelativeLayout>

    <RelativeLayout android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_below="@+id/rlNavbar">

        <WebView android:layout_width="fill_parent"
                 android:layout_height="fill_parent"
                 android:background="@android:color/transparent"
                 android:id="@+id/webBrowser" />

        <ImageView android:layout_width="80px"
                   android:layout_height="80px"
                android:id="@+id/ivProgress"
                android:src="@drawable/icon_progress"
                android:layout_centerInParent="true"/>

    </RelativeLayout>

</RelativeLayout>

